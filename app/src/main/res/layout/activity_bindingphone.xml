<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/main_bg" >

        <ImageView
            android:id="@+id/bindsetting_goback"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/top_icon_goback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="绑定手机"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/qparking_submit"
            android:layout_width="50dip"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dip"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_top"
            android:clickable="true"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="提 交"
            android:textColor="#000000"
            android:textSize="17sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/shape_bg"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/binding_et_phonenumber"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/all_edit"
                android:hint="请输入手机号码"
                android:maxLength="11"
                android:phoneNumber="true"
                android:saveEnabled="true"
                android:singleLine="true" >
            </EditText>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@drawable/shape_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/binding_et_yanzhengma"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="3dip"
                android:layout_weight="2"
                android:background="@drawable/all_edit"
                android:hint="请输入验证码"
                android:maxLength="6"
                android:phoneNumber="true"
                android:saveEnabled="true"
                android:singleLine="true" />

            <Button
                android:id="@+id/binding_btn_getyanzhengma"
                android:layout_width="0dp"
                android:layout_height="40dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="2"
                android:background="@drawable/btn_lockopen"
                android:text="获取验证码"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/usersetting_outlogin"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/btn_setting_p"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="50dip"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingLeft="15.0dip"
                android:text="18702831024"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/usersetting_outlogin1"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/btn_setting_p"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="50dip"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingLeft="15.0dip"
                android:text="暂不能更换"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>