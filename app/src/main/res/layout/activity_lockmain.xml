    <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_gravity="start|top"
                  android:background="@android:color/white"
                  android:clickable="true"
                  android:fitsSystemWindows="true"
                  android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/user_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/head_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/img_head"/>

            <TextView
                android:id="@+id/locker_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/head_img"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_30"
                tools:text="爬爬"/>

            <TextView
                android:id="@+id/locker_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/locker_name_tv"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/head_img"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_26"
                tools:text="13400001111"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow"/>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/shadow"/>

        <TextView
            android:id="@+id/rent_locker_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/img_menu_locker"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="我要停车"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_30"/>


        <TextView
            android:id="@+id/order_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/img_menu_order"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/my_order"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_30"/>

        <TextView
            android:id="@+id/wallet_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/img_menu_wallet"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="我的钱包"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_30"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/shadow"/>

        <TextView
            android:id="@+id/add_locker_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/img_menu_add_locker"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="添加车锁"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_30"/>

        <TextView
            android:id="@+id/lock_manager_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/img_menu_manager_locker"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="车锁管理"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_30"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/shadow"/>

        <TextView
            android:id="@+id/my_rent_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/img_menu_rent"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="我的租用"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_30"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/shadow"/>

        <TextView
            android:id="@+id/about_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/img_menu_about"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="关于"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_30"/>

    </LinearLayout>

    <com.joyotime.qparking.view.MyRelativeLayout
        android:id="@+id/lockmain_mainshow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee">

        <RelativeLayout
            android:id="@+id/lockmain_rl_title"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@color/main_bg"
            android:bottom="6dp">

            <ImageView
                android:id="@+id/lockmain_iv_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/menu_new"/>

            <ImageView
                android:id="@+id/lockmain_iv_icon_red"
                android:layout_width="8dip"
                android:layout_height="8dip"
                android:layout_alignTop="@+id/lockmain_iv_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="10dip"
                android:scaleType="centerCrop"
                android:src="@drawable/gen_point"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/app_title"
                android:textColor="#ffffff"
                android:textSize="20sp"/>
        </RelativeLayout>

        <View
            android:id="@+id/main_title_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/lockmain_rl_title"
            android:background="@color/divide_line"/>

        <RelativeLayout
            android:id="@+id/lockmain_rl_lockname"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_below="@id/main_title_divider"
            android:background="@color/main_bg"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/lockmain_bluename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/lockmain_connect"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/already_connect"
                android:gravity="right|center_vertical"
                android:textColor="#ffffff"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lockmain_battery"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_below="@id/lockmain_rl_lockname"
            android:background="@color/main_bg">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"/>

            <TextView
                android:id="@+id/battery_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:text="92%"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <LinearLayout
                android:id="@+id/battery_icon_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@id/battery_count"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bat_1"
                    android:layout_width="4dp"
                    android:layout_height="12dp"
                    android:src="@drawable/battery_y"/>

                <ImageView
                    android:id="@+id/bat_2"
                    android:layout_width="4dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/battery_y"/>

                <ImageView
                    android:id="@+id/bat_3"
                    android:layout_width="4dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/battery_y"/>

                <ImageView
                    android:id="@+id/bat_4"
                    android:layout_width="4dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/battery_y"/>

                <ImageView
                    android:id="@+id/bat_5"
                    android:layout_width="4dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/battery_n"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/lockmain_battery">

            <RelativeLayout
                android:id="@+id/lockmain_nei1"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:background="@color/main_bg"
                android:gravity="center">

                <ImageView
                    android:id="@+id/lockmain_iv_lock"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/btn_lock"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lock_status"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_below="@+id/lockmain_nei1"
                android:background="@color/main_bg"
                android:gravity="center"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/lockmain_link"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/gen_icon_nolink"/>

                <TextView
                    android:id="@+id/lockmain_tomattext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dip"
                    android:layout_toLeftOf="@+id/lockmain_link"
                    android:text="正在开启蓝牙..."
                    android:textColor="@color/white"
                    android:textSize="19sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/car_paker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lock_status"
                android:background="@color/main_bg"
                android:gravity="center">

                <TextView
                    android:id="@+id/lockmain_parkingaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在停车场"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/content_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/operation_container"
                android:layout_below="@+id/car_paker"
                android:background="@drawable/bg_bottom"/>

            <LinearLayout
                android:id="@+id/operation_container"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/lockmain_bell"
                    android:layout_width="120dip"
                    android:layout_height="50dip"
                    android:background="@drawable/btn_bell"
                    android:gravity="right|center_vertical"
                    android:paddingRight="30dp"
                    android:scaleType="fitXY"
                    android:text="寻锁"
                    android:textColor="#967032"
                    android:textSize="17sp"/>

                <Button
                    android:id="@+id/lockmain_change"
                    android:layout_width="120dip"
                    android:layout_height="50dip"
                    android:layout_marginLeft="24dp"
                    android:background="@drawable/btn_list"
                    android:gravity="right|center_vertical"
                    android:paddingRight="30dp"
                    android:scaleType="fitXY"
                    android:text="列表"
                    android:textColor="#967032"
                    android:textSize="17sp"/>

                <ImageButton
                    android:id="@+id/lockmain_lockofforob"
                    android:layout_width="100dip"
                    android:layout_height="100dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:layout_marginTop="-25dip"
                    android:background="@drawable/btn_lock_offx"
                    android:visibility="gone"/>
            </LinearLayout>

        </RelativeLayout>
    </com.joyotime.qparking.view.MyRelativeLayout>

</com.joyotime.qparking.view.DragLayout>