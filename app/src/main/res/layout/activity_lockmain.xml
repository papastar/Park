<com.joyotime.qparking.view.DragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lockmain_dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0a071a"
    android:clipToPadding="true"
    android:fitsSystemWindows="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="30dp" >

        <RelativeLayout
            android:id="@+id/lockmain_login_ll"
            android:layout_width="match_parent"
            android:layout_height="130dip"
            android:background="#24222f"
            android:gravity="center"
            android:onClick="true" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dip"
                android:layout_marginTop="0dip"
                android:gravity="center_vertical" >

                <com.joyotime.qparking.view.CircleImageView
                    android:id="@+id/lockmain_headimage"
                    android:layout_width="65dip"
                    android:layout_height="65dip"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dip"
                    android:src="@drawable/img_head"
                    app:border_color="@color/light"
                    app:border_width="2dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_marginTop="90dip"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/lockmain_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dip"
                    android:text="点击登陆"
                    android:textColor="#eeeeee"
                    android:textSize="18sp" />
            </RelativeLayout>
        </RelativeLayout>

        <ListView
            android:id="@+id/lockmain_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lockmain_login_ll"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="10dp"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:paddingLeft="15dip"
            android:textColor="#eeeeee" />

        <RelativeLayout
            android:id="@+id/lockmain_rl_about"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@drawable/shape_menu_line" />

            <ImageView
                android:id="@+id/m_item_iv"
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:layout_marginTop="8dip"
                android:layout_marginLeft="15dip"
                android:gravity="center_vertical"
                android:background="@drawable/menu_icon_abou" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="67dip"
                android:layout_marginTop="12dip"
                android:text="关于"
                android:textColor="#eeeeee"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/lockmain_rl_about_red"
                android:layout_width="8dip"
                android:layout_height="8dip"
                android:layout_marginLeft="110dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/gen_point"
                android:gravity="center_vertical"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

    <com.joyotime.qparking.view.MyRelativeLayout
        android:id="@+id/lockmain_mainshow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee" >

        <RelativeLayout
            android:id="@+id/lockmain_rl_title"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@color/main_bg"
            android:bottom="6dp" >

            <ImageView
                android:id="@+id/lockmain_iv_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/menu_new" />

            <ImageView
                android:id="@+id/lockmain_iv_icon_red"
                android:layout_width="8dip"
                android:layout_height="8dip"
                android:layout_alignTop="@+id/lockmain_iv_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="10dip"
                android:scaleType="centerCrop"
                android:src="@drawable/gen_point"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/app_title"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </RelativeLayout>
        
        <View 
            android:id="@+id/main_title_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divide_line"
            android:layout_below="@id/lockmain_rl_title"/>

        <RelativeLayout
            android:id="@+id/lockmain_rl_lockname"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@color/main_bg"
            android:gravity="center_vertical"
            android:layout_below="@id/main_title_divider" >

            <TextView
                android:id="@+id/lockmain_bluename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp" />
            
            <TextView 
                android:id="@+id/lockmain_connect"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:gravity="right|center_vertical"
                android:background="@drawable/already_connect"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"/>
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/lockmain_battery"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@color/main_bg"
            android:layout_below="@id/lockmain_rl_lockname">
            
            <View 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"/>
            
            <TextView 
                android:id="@+id/battery_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginRight="12dp"
                android:text="92%"/>
            
            <LinearLayout 
                android:id="@+id/battery_icon_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/battery_count"
                android:orientation="horizontal"
                android:layout_marginRight="4dp">
                
                <ImageView 
                    android:id="@+id/bat_1"
                    android:layout_width="4dp"
                    android:layout_height="12dp"
                    android:src="@drawable/battery_y"/>
                
                <ImageView 
                    android:id="@+id/bat_2"
                    android:layout_width="4dp"
                    android:layout_height="12dp"
                    android:src="@drawable/battery_y"
                    android:layout_marginLeft="4dp"/>
                
                <ImageView 
                    android:id="@+id/bat_3"
                    android:layout_width="4dp"
                    android:layout_height="12dp"
                    android:src="@drawable/battery_y"
                    android:layout_marginLeft="4dp"/>
                
                <ImageView 
                    android:id="@+id/bat_4"
                    android:layout_width="4dp"
                    android:layout_height="12dp"
                    android:src="@drawable/battery_y"
                    android:layout_marginLeft="4dp"/>
                
                <ImageView 
                    android:id="@+id/bat_5"
                    android:layout_width="4dp"
                    android:layout_height="12dp"
                    android:src="@drawable/battery_n"
                    android:layout_marginLeft="4dp"/>
                
            </LinearLayout>
            
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/lockmain_battery" >

            <RelativeLayout
                android:id="@+id/lockmain_nei1"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:background="@color/main_bg"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/lockmain_iv_lock"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/btn_lock" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lock_status"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_below="@+id/lockmain_nei1"
                android:background="@color/main_bg"
                android:paddingBottom="10dp"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/lockmain_link"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/gen_icon_nolink" />

                <TextView
                    android:id="@+id/lockmain_tomattext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dip"
                    android:layout_toLeftOf="@+id/lockmain_link"
                    android:text="正在开启蓝牙..."
                    android:textColor="@color/white"
                    android:textSize="19sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/car_paker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lock_status"
                android:background="@color/main_bg"
                android:gravity="center" >

                <TextView
                    android:id="@+id/lockmain_parkingaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在停车场"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/content_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/car_paker"
                android:layout_above="@+id/operation_container"
                android:background="@drawable/bg_bottom"/>

            <LinearLayout
                android:id="@+id/operation_container"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="horizontal" >

               <Button
                   android:id="@+id/lockmain_bell"
                   android:layout_width="120dip"
                   android:layout_height="50dip"
                   android:scaleType="fitXY"
                   android:background="@drawable/btn_bell"
                   android:gravity="right|center_vertical"
                   android:paddingRight="30dp"
                   android:textSize="17sp"
                   android:textColor="#967032"
                   android:text="寻锁" />

               <Button
                   android:id="@+id/lockmain_change"
                   android:layout_width="120dip"
                   android:layout_height="50dip"
                   android:layout_marginLeft="24dp"
                   android:scaleType="fitXY"
                   android:background="@drawable/btn_list"
                   android:gravity="right|center_vertical"
                   android:paddingRight="30dp"
                   android:textSize="17sp"
                   android:textColor="#967032"
                   android:text="列表" />
               
               <ImageButton
                    android:id="@+id/lockmain_lockofforob"
                    android:layout_width="100dip"
                    android:layout_height="100dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:layout_marginTop="-25dip"
                    android:background="@drawable/btn_lock_offx"
                    android:visibility="gone" />
            </LinearLayout>

        </RelativeLayout>
    </com.joyotime.qparking.view.MyRelativeLayout>

</com.joyotime.qparking.view.DragLayout>