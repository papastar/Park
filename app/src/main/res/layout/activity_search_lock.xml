<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.papa.park.ui.activity.SearchLockActivity">

    <include layout="@layout/common_toolbar"/>

    <com.papa.park.ui.view.SearchDeviceView
        android:id="@+id/scan_view"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="@string/search_result"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/size_32"/>


    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/bg_common"
        android:divider="@color/color_divide"
        android:dividerHeight="@dimen/divide_height"/>

</LinearLayout>
